{
  "compilerOptions": {
    "target": "es2016",
    "module": "amd",
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "outFile": "./dist/index.js",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    },
  },
  "include": ["src/**/*", "scripts/runtest.ts"],
  "exclude": ["node_modules", "dist", "scripts"]
}
